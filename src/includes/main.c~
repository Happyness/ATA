#include "stdlib.h"
#include "SDL.h"

int main(int argc, char *argv[])
{
	cs = connectServer();
	getPlayers();
	drawWorld();
	
	while (isConnected()) {
		sendInputToServer();
		getPlayers();
		updateWorldToServer();
		drawGraphics();
	}
}